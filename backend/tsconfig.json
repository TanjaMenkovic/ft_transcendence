{
  "compilerOptions": {
    "target": "es2020",                     // Better async/await and modern JS support
    "lib": ["dom", "dom.iterable", "esnext"], // Needed for React (DOM types) and modern features
    "module": "esnext",                     // Modern module support (can stay commonjs if you need legacy)
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "jsx": "react-jsx",                     // Modern React JSX transform (React 17+)
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,             // Enables importing JSON
    "isolatedModules": true,               // Required if using Babel or SWC
    "noEmit": true,                        // Useful for frontend React projects that use separate build tools
    "types": ["node"]                      // Node.js type definitions
  },
  "include": ["src"],                      // Adjust based on your source directory
  "exclude": ["node_modules", "dist"]
}
